{
	"manifest_version": 2,
	"name": "Password Hasher Plus - Password Generator",
	"version": "2.3.7",
	"description": "Password Hasher Plus automatically enhances password strength (length and difficulty) to protect your accounts.",
	"icons": { "64": "images/icon.png", "128": "images/icon.png" },

	"background": {
		"page":"background.html"
	},

	"options_ui": {
		"page": "options.html"
	},

	"browser_action": {
		"default_icon": "images/passhash.png",
		"default_title": "Password Hasher",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["lib/jquery-3.1.1.min.js", "lib/jquery.qtip.min.js", "lib/sha1.js", "lib/tld.min.js", "lib/passhashcommon.js", "common.js", "content-script.js"],
			"css": ["lib/jquery.qtip.min.css", "styles.css"],
			"run_at": "document_end",
			"all_frames": true
		}
	],

	"permissions": [
		"activeTab", "http://*/*", "https://*/*"
	],

	"content_security_policy": "script-src 'self' 'sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=' 'sha256-BXbfmaaxqDFKz4VsEiL7ubAcLlBL2iV7UxnMIMSvfwA=' 'sha256-5UpOmiIImmd9wla+ZcvHMn6RaUWbUygKvqbAUx//yWg=' 'sha256-thpfFgw1VMy7GcMXqpWVABUalukoNCn0g0kQTelDqEA=' 'sha256-VuBPIfNvP9X4j73iCH4J0io3i5jMKxyWJ68F/GlC2FQ=' 'sha256-6EYWh8FtxxihGQ+EWslGXVoXj/Natmo/uGIujm3H96Y=' ; object-src 'self'"
}
